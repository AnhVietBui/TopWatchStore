    var ListOrderDetail1 = (List<DoAn_LapTrinhWeb.Model.Oder_Detail>)ViewBag.ListOrderDetail1;
    var ListOrderDetail2 = (List<DoAn_LapTrinhWeb.Model.Oder_Detail>)ViewBag.ListOrderDetail2;
    var OrderDetail = (List<DoAn_LapTrinhWeb.Model.Oder_Detail>)ViewBag.OrderDetail;
    var listOrder = (List<DoAn_LapTrinhWeb.Model.Order>)ViewBag.ListOrder;
    DateTime getLastMonth = DateTime.Now.AddMonths(-1);
    double totalOrderThisMonth = Convert.ToDouble(Order.Where(m => m.oder_date.Month == DateTime.Now.Month && m.oder_date.Year == DateTime.Now.Year).Count());
    double totalOrderLastMonth = Convert.ToDouble(Order.Where(m => m.oder_date.Month == getLastMonth.Month).Count());
    double totalPriceOrderThisMonth = Convert.ToDouble(Order.Where(m => m.oder_date.Month == DateTime.Now.Month && m.oder_date.Year == DateTime.Now.Year && m.IsPayment).Sum(m => m.total));
    double totalPriceOrderLastMonth = Convert.ToDouble(Order.Where(m => m.oder_date.Month == getLastMonth.Month && m.IsPayment).Sum(m => m.total));
    //Phần trăm của đơn hàng
    double percentOrder = ((1) - ((totalOrderLastMonth - totalOrderThisMonth) / (totalOrderLastMonth)));
    double percentOrderIncrease = (totalOrderThisMonth - totalOrderLastMonth) / totalOrderLastMonth;
    double percentOrderDecrease = (totalOrderLastMonth - totalOrderThisMonth) / totalOrderLastMonth;
    //Phần trăm giá cả
    double totalOrderThisMonthChecked = Convert.ToDouble(Order.Where(m => m.oder_date.Month == DateTime.Now.Month && m.oder_date.Year == DateTime.Now.Year && m.status != "1").Count());
    double percentPriceOrderIncrease = (totalPriceOrderThisMonth - totalPriceOrderLastMonth) / totalPriceOrderLastMonth;
    double percentPriceOrderDecrease = (totalPriceOrderLastMonth - totalPriceOrderThisMonth) / totalPriceOrderLastMonth;
    double percentOrderNotSeen = (totalOrderThisMonth - totalOrderThisMonthChecked) / totalOrderThisMonth;
    double total = 0;
